<%- include('partials/header') %>
<link rel="stylesheet" href="/styles/main.css"/>
<link rel="stylesheet" href="/styles/voter-link.scss"/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</head>

<body>
<header>
  <h1 class="">Show of Hands Logo</h1>
</header>

<div class="poll-container">

    <div class="welcome-message">
      <p> Welcome to poll <%= title %> created by <%= creator %>!

      We're excited to have you here. Your input is invaluable to us. Please take a few moments to cast your votes on the questions below.

      Happy Voting!</p>
    </div>

  <form action="/voter/" method="POST" class="form-content needs-validation" novalidate>
    <div class="form-floating">
      <input type="text" placeholder="Your name" id="name" name="name" class="form-control" required>
      <label for="name">Name</label>
      <div class="valid-feedback">
        Looks good!
      </div>
      <div class="invalid-feedback">
        Please enter your name!
      </div>
    </div>
    <% if (public === true) { %>
      <div class="form-floating">
        <input type="email" placeholder="Your email" id="email" name="email" class="form-control" required>
        <label for="email">Email</label>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please enter your email!
        </div>
      </div>
    <% } %>
    <section class="candidate-container">
      <% for (let x = 0; x < candidates[0].length; x++) { %>
        <article>
          <divclass="form-floating">
            <%= candidates[0][x] %>
          </div>
          <% if ( candidates[1][x] !== null ) { %>
            <div>
              <button type="button" id="show-description" class="btn btn-primary">Description</button>
            </div>
          <% } %>
          <div>
            <%= candidates[1][x] %>
          </div>
          <label for="rank">Rank:</label>
          <select name="rank" id="rank">
            <option value="0">0</option>
          </select>
        </article>
      <% } %>
      <div>
        <button type="submit" class="btn btn-primary">Create poll</button>
      </div>
    </section>
  </form>
</div>

<%- include('partials/footer') %>
